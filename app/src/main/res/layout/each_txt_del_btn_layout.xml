<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eachTextDelBtnCardView"

    android:elevation="@dimen/normalCardElevation"
    app:contentPadding="@dimen/normalCardContentPadding"
    app:cardCornerRadius="@dimen/normalCardCornerRadius"

    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"



    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTxt"
            android:textSize="@dimen/normalFont"
            android:layout_centerHorizontal="true"

            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/delBtn"
            android:src="@drawable/delete"
            android:layout_alignParentRight="true"


            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>