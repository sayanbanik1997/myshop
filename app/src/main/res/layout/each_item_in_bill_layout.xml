<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:elevation="@dimen/normalCardElevation"
    app:contentPadding="@dimen/normalCardContentPadding"
    app:cardCornerRadius="@dimen/normalCardCornerRadius"

    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/prodNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prodname"
            android:gravity="center"
            android:padding="@dimen/normalPadding"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/quanEdt"
            android:inputType="numberSigned"
            android:hint="@string/quantity"
            android:layout_margin="@dimen/normalPadding"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prodNameTxt"
            app:layout_constraintEnd_toStartOf="@+id/priceEdt"

            />
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/priceEdt"
            android:inputType="numberDecimal"
            android:hint="@string/price"
            android:layout_margin="@dimen/normalPadding"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prodNameTxt"
            app:layout_constraintStart_toEndOf="@id/quanEdt"


            />

        <TextView
            android:id="@+id/unitTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unit"
            android:layout_margin="@dimen/normalPadding"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <EditText
            android:id="@+id/amountEt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="amount"
            android:layout_margin="@dimen/normalPadding"
            android:inputType="numberSigned"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete"
            android:id="@+id/delBtn"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>